<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.irlab.view.BluetoothActivity">

    <ScrollView
        android:layout_width="397dp"
        android:layout_height="734dp"
        android:layout_weight="1"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="86dp"
                    android:layout_height="41dp"
                    android:text="蓝牙"
                    android:textColor="#2196F3"
                    android:textSize="20sp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="41dp"
                    tools:layout_editor_absoluteY="5dp" />

                <TextView
                    android:id="@+id/connectedDevice"
                    android:layout_width="243dp"
                    android:layout_height="41dp"
                    android:gravity="center"
                    android:text="当前无设备连接"
                    android:textColor="#CDB38B"
                    android:textSize="14sp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="41dp"
                    tools:layout_editor_absoluteY="5dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="336dp"
                    android:layout_height="wrap_content"
                    android:text="已配对设备"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="3dp"
                    tools:layout_editor_absoluteY="297dp" />

                <ImageButton
                    android:id="@+id/RefreshPairedDevice"
                    android:layout_width="23dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/refresh" />
            </LinearLayout>

            <TextView
                android:id="@+id/UnderLine0"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"
                android:text="TextView" />

            <ListView
                android:id="@+id/paired_device"
                android:layout_width="409dp"
                android:layout_height="216dp"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="85dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="336dp"
                    android:layout_height="wrap_content"
                    android:text="可用设备"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="3dp"
                    tools:layout_editor_absoluteY="297dp" />

                <ImageButton
                    android:id="@+id/RefreshOptionDevice"
                    android:layout_width="23dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/refresh" />

            </LinearLayout>

            <TextView
                android:id="@+id/UnderLine1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"
                android:text="TextView" />

            <ListView
                android:id="@+id/option_devices"
                android:layout_width="409dp"
                android:layout_height="311dp"
                tools:layout_editor_absoluteX="3dp"
                tools:layout_editor_absoluteY="327dp" />

            <!--            <TextView-->
            <!--                android:id="@+id/speechResults"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="60dp"-->
            <!--                android:layout_weight="1"-->
            <!--                android:hint="语音识别结果"-->
            <!--                android:text="" />-->

            <!--            <TextView-->
            <!--                android:id="@+id/order"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="31dp"-->
            <!--                android:layout_weight="1"-->
            <!--                android:hint= "口令传递"-->
            <!--                android:text="" />-->
        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>