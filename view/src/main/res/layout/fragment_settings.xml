<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        style="@style/fragment_bar_style">

        <TextView
            style="@style/textview_bar_style"
            android:text="设置" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/tv_show_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="16dp"
            android:text="显示用户名"
            android:textSize="36sp"/>
        <!--圆形图片-->
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_marginLeft="20dp"
            android:id="@+id/iv_profile"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/white"
            app:shapeAppearanceOverlay="@style/circleImageStyle"
            android:src="@mipmap/default_profile" />

    </LinearLayout>

    <LinearLayout
        style="@style/linearLayout_settings_style">

        <RelativeLayout
            android:id="@+id/layout_bluetooth"
            style="@style/relativeLayout_settings_style">

            <ImageView
                android:id="@+id/iv_bluetooth"
                style="@style/leftImageView_settings_style"
                android:src="@drawable/ic_bluetooth" />

            <TextView
                android:id="@+id/tv_bluetooth"
                style="@style/textview_settings_style"
                android:layout_toEndOf="@+id/iv_bluetooth"
                android:text="蓝牙" />

            <ImageView
                android:id="@+id/iv_enter_bluetooth"
                style="@style/rightImageView_settings_style"
                android:src="@drawable/icon_enter" />
        </RelativeLayout>

        <View
            android:layout_height="3px"
            android:background="@color/whiteSmoke"
            android:layout_width="fill_parent"/>

        <RelativeLayout
            android:id="@+id/layout_speech"
            style="@style/relativeLayout_settings_style">

            <ImageView
                android:id="@+id/iv_speech"
                style="@style/leftImageView_settings_style"
                android:src="@drawable/icon_speech" />

            <TextView
                android:id="@+id/tv_speech"
                style="@style/textview_settings_style"
                android:layout_toEndOf="@+id/iv_speech"
                android:text="语音测试" />

            <ImageView
                android:id="@+id/iv_enter_speech"
                style="@style/rightImageView_settings_style"
                android:src="@drawable/icon_enter" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_test_bluetooth"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            style="@style/relativeLayout_settings_style">

            <EditText
                android:id="@+id/editText1"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="26dp"
                android:layout_marginTop="21dp"
                android:text="LA1Z"
                android:hint="在此输入指令">
                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText1"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-51dp"
                android:layout_marginEnd="17dp"
                android:text="发送指令" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_test_bluetooth_content"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            style="@style/relativeLayout_settings_style">

            <TextView
                android:id="@+id/layout_bluetooth_content"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="指令记录："
                android:textSize="16sp" />

        </RelativeLayout>

        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="@drawable/set_border"
            android:layout_marginStart="46dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/bar_selector"
        android:text="退出登录"
        android:textColor="@color/red" />


</LinearLayout>