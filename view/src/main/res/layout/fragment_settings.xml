<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">


        <TextView
            android:id="@+id/tv_sss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="121231"
            android:textSize="36sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_bluetooth"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:gravity="center_horizontal"
            android:background="@drawable/bar_selector"
            android:clickable="true">

            <ImageView
                android:id="@+id/iv_bluetooth"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="-70dp"
                android:src="@drawable/icon_bluetooth"
                android:contentDescription="bluetooth_img" />

            <TextView
                android:id="@+id/tv_bluetooth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="-70dp"
                android:layout_toEndOf="@+id/iv_bluetooth"
                android:text="蓝牙"
                android:textColor="#000000"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_enter_bluetooth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="-64dp"
                android:src="@drawable/icon_enter" />
        </RelativeLayout>

        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="2px"
            android:background="@drawable/setborder"
            android:layout_marginStart="46dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:background="@drawable/bar_selector"
        android:clickable="true"
        android:layout_marginTop="3dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:focusable="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_camara"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="-70dp"
                android:src="@drawable/icon_camara" />

            <TextView
                android:id="@+id/tv_camara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_camara"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-70dp"
                android:text="摄像头"
                android:textSize="18sp"
                android:textColor="#000000"/>

            <ImageView
                android:id="@+id/iv_enter_camara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="-64dp"
                android:src="@drawable/icon_enter" />
        </RelativeLayout>

        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@drawable/setborder"
            android:layout_marginStart="46dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:background="@drawable/bar_selector"
        android:clickable="true"
        android:layout_marginTop="3dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:focusable="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_notification"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="-70dp"
                android:src="@drawable/icon_notification" />

            <TextView
                android:id="@+id/tv_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_notification"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-70dp"
                android:text="消息通知"
                android:textSize="18sp"
                android:textColor="#000000"/>

            <ImageView
                android:id="@+id/iv_enter_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="-64dp"
                android:src="@drawable/icon_enter" />
        </RelativeLayout>

        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@drawable/setborder"
            android:layout_marginStart="46dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/bar_selector"
        android:text="退出登录"
        android:textColor="@color/red" />

</LinearLayout>